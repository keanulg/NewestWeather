<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="#ffffff">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1小时"
                android:layout_gravity="center_vertical"
                android:textSize="30dp"
                android:layout_marginLeft="10dp"
                android:textColor="#2d2d2d"/>
        <LinearLayout android:layout_width="0dp" android:layout_height="match_parent"
                      android:layout_weight="1"></LinearLayout>
        <CheckBox
                android:id="@+id/oneCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_gravity="center_vertical"
                android:button="@drawable/check_box_bg"
                />
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="2px"
                  android:background="#bfbfbf"></LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3小时"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:textSize="30dp"
                android:textColor="#2d2d2d"/>
        <LinearLayout android:layout_width="0dp" android:layout_height="match_parent"
                      android:layout_weight="1"></LinearLayout>
        <CheckBox
                android:id="@+id/threeCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_gravity="center_vertical"
                android:button="@drawable/check_box_bg"
                />
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="2px"
                  android:background="#bfbfbf"></LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5小时"
                android:layout_gravity="center_vertical"
                android:textSize="30dp"
                android:layout_marginLeft="10dp"
                android:textColor="#2d2d2d"/>
        <LinearLayout android:layout_width="0dp" android:layout_height="match_parent"
                      android:layout_weight="1"></LinearLayout>
        <CheckBox
                android:id="@+id/fiveCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_gravity="center_vertical"
                android:button="@drawable/check_box_bg"
                />
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="2px"
                  android:background="#bfbfbf"></LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10秒钟(测试)"
                android:layout_gravity="center_vertical"
                android:textSize="30dp"
                android:layout_marginLeft="10dp"
                android:textColor="#2d2d2d"/>
        <LinearLayout android:layout_width="0dp" android:layout_height="match_parent"
                      android:layout_weight="1"></LinearLayout>
        <CheckBox
                android:id="@+id/testCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_gravity="center_vertical"
                android:button="@drawable/check_box_bg"
                />
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="2px"
                  android:background="#bfbfbf"></LinearLayout>
</LinearLayout>